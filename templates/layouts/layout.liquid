<!doctype html>
<html lang="en">
    <head>
        <meta http-equiv="x-ua-compatible" content="IE=Edge"/>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">

        <!-- Title block allowing child pages to override -->
        <title>{% block title %}Shropgeek (R)evolution 2014{% endblock %}</title>
        <link rel="shortcut icon" type="image/ico" href="/favicon.ico" />
        {% include "typekit" %}
        <!-- Styles -->
        {{ "global.css" | asset_url | stylesheet_tag }}
        <!-- Style block allowing child pages to inject their own styles -->
        {% block styles %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            <!-- Content block, child page inject content -->
            {% block content %}{% endblock %}
        </div>
        <!-- Script block allowing child pages to inject their own scripts -->
        {% block scripts %}{% endblock %}
        {{ "app.js" | asset_url | script_tag }}
    </body>
</html>
